<script>
    document.addEventListener('DOMContentLoaded', function () {
        const menuButton = document.querySelector('[data-collapse-toggle="navbar-sticky"]');
        const mobileMenu = document.getElementById('navbar-sticky');

        menuButton.addEventListener('click', function () {
            mobileMenu.classList.toggle('hidden');
                       
        });

        // Close the mobile menu when a menu item is clicked
        const menuItems = document.querySelectorAll('#navbar-sticky a');

        menuItems.forEach(function (item) {
            item.addEventListener('click', function () {
                mobileMenu.classList.add('hidden');
            });

            // Background color changes on hover
            item.addEventListener('mouseenter', function () {
                item.style.backgroundColor = '#1BA9B5'; // Change this to your desired hover background color
